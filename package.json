{
  "name": "touch-typer",
  "description": "A cool little app to help your touch typing skills",
  "author": "Robert Koch <robert@kochie.io>",
  "main": "main/index.js",
  "productName": "Touch Typer",
  "version": "2.1.0-beta.11",
  "files": [
    "main/",
    "renderer/out"
  ],
  "type": "commonjs",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev:next": "next dev renderer/",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer",
    "build-electron": "node esbuild.config.mjs",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -mlw",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "replace-info": "sed -i '' 's/com.github.Electron/io.kochie.touch-typer/g' node_modules/electron/dist/Electron.app/Contents/Info.plist",
    "publish": "electron-builder -mlw -p always",
    "lint": "prettier --write .",
    "build+release": "electron-builder --config electron-builder.config.ts"
  },
  "dependencies": {
    "@electron/notarize": "^3.1.1",
