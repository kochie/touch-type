    "@sentry/nextjs": "^10.34.0",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.6.1",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.90.1",
    "@tailwindcss/forms": "^0.5.11",
    "app-root-path": "^3.1.0",
    "clsx": "^2.1.1",
    "deepmerge": "^4.3.1",
    "electron-builder-notarize": "^1.5.2",
