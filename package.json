{
  "name": "touch-typer",
  "description": "A cool little app to help your touch typing skills",
  "author": "Robert Koch <robert@kochie.io>",
  "main": "main/index.js",
  "productName": "Touch Typer",
  "version": "1.6.12",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "esbuild electron-src/index.ts electron-src/preload.ts --loader:.txt=file --outdir=main --platform=node --format=cjs --tsconfig=electron-src/tsconfig.json",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -mlw",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-builder -mlw -p always"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/free-regular-svg-icons": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@sentry/electron": "^3.0.7",
    "@sentry/nextjs": "^7.9.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-next": "^3.1.5",
    "electron-updater": "^5.2.1",
    "fathom-client": "^3.5.0",
    "next": "^12.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "@types/lodash.sample": "^4.2.7",
    "@types/lodash.samplesize": "^4.2.7",
    "@types/luxon": "^3.0.0",
    "@types/node": "^18.6.5",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "d3": "^7.6.1",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "electron-builder-notarize": "^1.5.0",
    "esbuild": "^0.14.54",
    "lodash.samplesize": "^4.2.0",
    "luxon": "^3.0.1",
    "postcss": "^8.4.16",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  }
}
