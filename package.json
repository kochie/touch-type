{
  "name": "touch-typer",
  "description": "A cool little app to help your touch typing skills",
  "author": "Robert Koch <robert@kochie.io>",
  "main": "main/index.js",
  "productName": "Touch Typer",
  "version": "1.9.1",
  "files": [
    "main/",
    "renderer/out"
  ],
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "esbuild electron-src/index.ts electron-src/preload.ts --loader:.txt=file --outdir=main --platform=node --format=cjs --tsconfig=electron-src/tsconfig.json",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -mlw",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-builder -mlw -p always"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/pro-duotone-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@sentry/electron": "^4.1.2",
    "@sentry/nextjs": "^7.23.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-next": "^3.1.5",
    "electron-updater": "^5.3.0",
    "fathom-client": "^3.5.0",
    "next": "^13.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@types/d3": "^7.4.0",
    "@types/lodash.sample": "^4.2.7",
    "@types/lodash.samplesize": "^4.2.7",
    "@types/luxon": "^3.1.0",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "autoprefixer": "^10.4.13",
    "d3": "^7.6.1",
    "electron": "^22.0.0",
    "electron-builder": "23.6.0",
    "electron-builder-notarize": "^1.5.0",
    "esbuild": "^0.15.16",
    "eslint": "8.28.0",
    "eslint-config-next": "13.0.6",
    "lodash.samplesize": "^4.2.0",
    "luxon": "^3.1.1",
    "postcss": "^8.4.19",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.3",
    "url-loader": "^4.1.1"
  }
}
